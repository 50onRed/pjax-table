<th class="pjax-table-header sortable" 
  data-sortable="true" 
  data-property="{{ property }}" 
  data-current-sort-direction="{{ current_sort }}" 
  data-default-sort-direction="asc">
  {{ name }}
  <span class="pjax-table-sort-indicator">
    <i class="fa fa-caret-{{ sortIcon current_sort }}"></i>
  </span>
</th>
